<div class="container mx-auto px-4 py-8">
  <h1 class="text-4xl font-bold mb-2">Speech Therapy App</h1>
  <p class="text-gray-600 mb-2">Real-time multiplayer synchronized canvas</p>
  <p class="text-sm text-green-600 mb-8">
    ðŸ”— Share this URL to collaborate: <code class="bg-gray-100 px-2 py-1 rounded font-mono text-xs"><%= request.original_url %></code>
  </p>

  <div id="synced-app" data-room-id="<%= @room_id %>"></div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const roomId = document.getElementById('synced-app').dataset.roomId

    const syncedApp = window.createVueApp(window.VueComponents.SyncedCanvas, {
      roomId: roomId
    })
    syncedApp.mount('#synced-app')
  })
</script>
